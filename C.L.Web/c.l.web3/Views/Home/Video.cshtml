          </div>
        </div>
  <div>
    <div class="layui-box layui-laypage layui-laypage-default" >
      <a href="javascript:;" class="layui-laypage-prev" ng-click="pageChange(-1)" >上一页</a>
      <a href="javascript:;" class="layui-laypage-next" ng-click="pageChange(1)" >下一页</a>
    </div>

 



<!-- Modal -->
<div class="modal fade  bd-example-modal-lg" id="ModifyModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document" style="max-width:700px;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle" ng-bind="currentVideo.name">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="layui-form" action="">
          <div class="layui-form-item">
            <label class="layui-form-label">name:</label>
            <div class="layui-input-block">
              <input type="text" name="title" lay-verify="title" autocomplete="off" placeholder="name" class="layui-input" ng-model="currentVideo.name" />
            </div>
          </div>
          <div class="layui-form-item layui-form-text">
            <label class="layui-form-label">tags:</label>
            <div class="layui-input-block">
              <textarea placeholder="tags" class="layui-textarea" ng-model="currentVideo.tags"></textarea>
            </div>
            <div class="layui-form-item">
            <label class="layui-form-label">url:</label>
            <div class="layui-input-block">
              <span ng-bind="currentVideo.url"></span>
            </div>
          </div>
          </div>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" ng-click="saveVodieInfo()">Save changes</button>
      </div>
    </div>
  </div>
</div>
</div>

<!--VideoPlay Modal -->
<div class="modal fade  bd-example-modal-lg" id="videoModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document" style="max-width:700px;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle" ng-bind="currentVideo.name">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <video id='my-video' class='video-js' controls preload='auto' width='640' height='264'
        poster='../img/vb-1.jpg' >
            <p class='vjs-no-js'>
            To view this video please enable JavaScript, and consider upgrading to a web browser that
            <a href='https://videojs.com/html5-video-support/' target='_blank'>supports HTML5 video</a>
            </p>
        </video>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>
</div>
</div>

