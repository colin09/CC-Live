        <div class="media border-bottom" ng-repeat="item in ResourceList">
        
            <a href="" ng-click="showVideoModel(item)" > <img class="mr-3" src="../img/vi-1.jpg" alt="item.name" style="height:64px;"></a>
            <div class="media-body">
